CC = /usr/bin/gcc

CCFLAGS = -Wall  			\
	-Wmissing-declarations -Wmissing-prototypes -Wnested-externs \
	-Werror -Wsign-compare \
	 -c -ggdb -O0 			\
	-DTPM_POSIX -Wno-deprecated-declarations			\
	-D_POSIX_			\
	-DTPM_NUVOTON

# example of pointing to a locally built openssl
CCFLAGS += 	-I/home/openssl/include

LNFLAGS = -ggdb 			\
	-lcrypto			\
	-lpthread			\
	-lrt				\
	-I.

# example of pointing to a locally built openssl
LNFLAGS +=	 -L/home/openssl

# This also requires setting the environment variable LD_LIBRARY_PATH.  E.g.,
# setenv LD_LIBRARY_PATH ${LD_LIBRARY_PATH}:/home/openssl

all:	tpm_server

include makefile-common

OBJFILES += TcpServerPosix.o

TcpServerPosix.o	: $(HEADERS)

.PHONY:		clean
.PRECIOUS:	%.o

tpm_server:	$(OBJFILES)
		$(CC) $(OBJFILES) $(LNFLAGS) -o tpm_server

clean:
		rm -f *.o tpm_server *~

%.o:		%.c
		$(CC) $(CCFLAGS) $< -o $@

